source "https://rubygems.org"

# Manage which Jekyll version Pages uses:
# Run `bundle install` whenever you change this file,
# then use `bundle exec jekyll serve` locally.

gem "github-pages", group: :jekyll_plugins

# Use Jekyll native (uncomment to opt-in):
# gem "jekyll"

# Windows file‐watching (only on Windows)
gem "wdm", "~> 0.1.0" if Gem.win_platform?

group :jekyll_plugins do
  # Caches include tags so Minimal Mistakes builds without errors
  gem "jekyll-include-cache"

  # Common Plugins
  # gem "jekyll-archives"   # (uncomment if you need archive pages)
  gem "jekyll-feed"
  gem "jekyll-sitemap"

  # Any other plugins you like:
  gem "hawkins"

  # WEBrick is required for newer Ruby versions
  gem "webrick", "~> 1.8"
end
